{
  "name": "laravel/laravel",
  "description": "The Laravel Framework.",
  "keywords": [
    "framework",
    "laravel"
  ],
  "license": "MIT",
  "type": "project",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/underdogg/caffeinated-themes.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/underdogg/caffeinated-plugins.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/underdogg/caffeinated-seo.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/underdogg/caffeinated-widgets.git"
    }
  ],
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6.4",
    "laravel/framework": "5.3.x-dev",
    "illuminate3/kotoba": "dev-master",
    "caffeinated/flash": "~3.0",
    "caffeinated/plugins": "^2.0",
    "caffeinated/themes": "^2.0",
    "caffeinated/menus": "dev-master",
    "caffeinated/seo": "dev-master",
    "caffeinated/modules": "dev-master",
    "caffeinated/widgets": "dev-master",
    "laracasts/presenter": "dev-master",
    "laravelcollective/html": "^5.0",
    "laravelrus/localized-carbon": "dev-master",
    "wikimedia/composer-merge-plugin": "^1.2",
    "yajra/laravel-datatables-oracle": "^5.12",
    "genealabs/laravel-caffeine": "^0.2",
    "cviebrock/eloquent-sluggable": "^3.1",
    "pagerfanta/pagerfanta": "^1.0",
    "erusev/parsedown": "^1.6",
    "doctrine/dbal": "^2.5",
    "kriswallsmith/assetic": "^1.4",
    "predis/predis": "^1.1",
    "filp/whoops": "~1.0",
    "vespakoen/menu": "^3.0"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~4.0",
    "phpspec/phpspec": "~2.1",

    "symfony/dom-crawler": "~3.0",
    "symfony/css-selector": "~3.0",

    "barryvdh/laravel-ide-helper": "^2.1",
    "barryvdh/laravel-debugbar": "^2.0"
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "app/Modules/*/composer.json"
      ]
    }
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "pre-update-cmd": [
      "php artisan clear-compiled"
    ],
    "post-update-cmd": [
      "php artisan optimize"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ]
  }
}
